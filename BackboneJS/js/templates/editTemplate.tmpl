<div class="panel panel-default">
    <div class="panel-heading ">Editor</div>
    <div class="panel-body">
        <p><button class="btn btn-success">Update Data</button></p>
        <div class="wrapper">

            <div class="input-group input-group" style="margin-top: 10px;">
                <span class="input-group-addon" id="title">Title</span>
                <input type="text" class="form-control" placeholder="Username" value="{{title}}">
            </div>

            <div class="input-group input-group" style="margin-top: 10px;">
                <span class="input-group-addon" id="desc">Description</span>
                <input type="text" class="form-control" placeholder="Username" value="{{desc}}">
            </div>

            <div class="input-group input-group" style="margin-top: 10px;">
                <span class="input-group-addon" id="clicks">Total Clicks</span>
                <input type="text" class="form-control" placeholder="Username" value="{{clicks}}">
            </div>
        </div>
    </div>
</div>

